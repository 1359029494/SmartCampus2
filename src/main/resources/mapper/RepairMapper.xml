<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qilu.mapper.RepairMapper">
    <resultMap id="repairMap" type="Repair">
        <id column="id" property="id"></id>
        <result column="role" property="role"></result>
        <result column="userId" property="userid"></result>
        <result column="type" property="type"></result>
        <result column="local" property="local"></result>
        <result column="photo" property="photo"></result>
        <result column="evaluateId" property="evaluateId"></result>
        <result column="repairDate" property="repairDate"></result>
        <result column="serviceDate" property="serviceDate"></result>
        <result column="repairStatus" property="repairStatus"></result>
        <result column="serviceStatus" property="serviceStatus"></result>
        <result column="fine" property="fine"></result>
        <association property="maintainer" resultMap="MaintainerMap"></association>
    </resultMap>
    <resultMap id="MaintainerMap" type="Maintainer">
        <id column="mid" property="id"></id>
        <result column="name" property="name"></result>
        <result column="sex" property="sex"></result>
        <result column="phone" property="phone"></result>
        <result column="mainNo" property="mainNo"></result>
    </resultMap>

    <select id="findMyRepair" resultMap="repairMap">
        select r.*,m.* from t_repair r LEFT JOIN t_receipt rt ON r.id=rt.repair_id LEFT JOIN t_maintainer m  ON rt.maintainer_id=m.id WHERE r.role=#{roleType} AND r.user_id=#{userId}
    </select>
</mapper>